<div class="list-group" style="width: 50%"></div>
<li class="list-group-item">
    <h5 class="list-group-item-heading">
      <a href="/users/<%= feed_item.user.id %>"><%= feed_item.user.email %></a> Reviewed <a href="/landmarks/<%= feed_item.landmark.id %>"><%= feed_item.landmark.name %></a></h5>
    <br>
    <p class="list-group-item-text"><%= feed_item.text %></p><br>
    <small class="timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    </small>
  <% if current_user?(feed_item.user) %>
    <%= link_to "delete", feed_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: feed_item.text %>
  <% end %>
</li>
